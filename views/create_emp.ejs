<%- include('./includes/header.ejs', { title: title }) %>
    <div class="container py-5">
        <div class="row align-content-center justify-content-center">
            <div class="col-md-10">
                <% if (showAlert) { %>
                    <div class="alert alert-success alert-dismissible my-1" role="alert">
                        Employee, <b>
                            <%= employee.name %>
                        </b> added successfully!
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <% } %>
                        <h2>Create New Employee</h2>
                        <div class="pt-3">
                            <form action="/employee/" method="post">
                                <div class="form-group">
                                    <label for="name">Name:</label>
                                    <input type="text" class="form-control mt-2" name="name" id="name"
                                        placeholder="Enter employee name">
                                </div>
                                <div class="form-group mt-2">
                                    <label for="email">Email:</label>
                                    <input type="email" class="form-control mt-2" name="email" id="email"
                                        placeholder="Enter employee email">
                                </div>
                                <div class="form-group mt-2 ">
                                    <label for="salary">Salary:</label>
                                    <input type="number" class="form-control mt-2" name="salary" id="salary"
                                        placeholder="Enter employee salary">
                                </div>
                                <button type="submit" class="btn btn text-white mt-4"
                                    style="background-color: #06d6a0;">Submit</button>
                            </form>
                        </div>
            </div>
        </div>
    </div>
    <%- include('./includes/footer.ejs') %>